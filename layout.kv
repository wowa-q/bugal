#:kivy 2.3.0

<Button>
    font_size: 16   # Schriftgroesse
	background_normal: ''
	background_color: (68/255,78/255,153/255,1) # color picker online
	# size_hint: (0.3, 0.2)
    halign: "center"
    valign: "middle"

<Label>
    text_size: self.size

<TextInput>
	multiline: False
	height: 50
	# width: 200

<BugalRoot>
    BoxLayout: # 1
        orientation: 'vertical'

        # oberste Button-Leiste
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40

            Button:
                text: "Configure Import"
                on_press: root.configure()
            Button:
                text: "Clear configuration"
                on_press: root.clear_input()
            Button:
                text: "Start Import"
                on_press: root.do_import()
            Button:
                text: "Configure Export"
                on_press: root.do_export_cfg()
            Button:
                text: "Start Export"
                on_press: root.do_export()

        # Abstand
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 10
            Label:
                text: ""

        BoxLayout:  # 3 Label Texteingabe Paare
            orientation: 'vertical'
            size_hint_y: None
            height: 150
            BoxLayout: # CSV file config text-input
                orientation: 'horizontal'
                Label:  # CSV file config text-input
                    text: "CSV file to be imported - full path"
                    halign: "right"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: csv_pth_input
                    text: "d:\orange\private_FP"

            BoxLayout: # DB file config text-input
                orientation: 'horizontal'
                Label:
                    text: "DB file to be imported - full path"
                    halign: "right"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: db_pth_input
                    text: "d:\orange\private_FP\productive.db"

            BoxLayout: # zip file config text-input
                orientation: 'horizontal'
                Label:
                    text: "zip file to be used for archiving - full path"
                    halign: "right"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: zip_pth_input
                    text: "d:\orange\private_FP\archive.zip"

            BoxLayout: # xlsx file config text-input
                orientation: 'horizontal'
                Label:
                    text: "xlsx file to be used for export - full path"
                    halign: "right"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: xlsx_pth_input
                    text: "d:/projects/910_prProjects/bugal/bugal_p/import_2.xlsx"

            BoxLayout: # toml file config text-input
                orientation: 'horizontal'
                Label:
                    text: "Configuration file to be used for configuration - full path"
                    halign: "right"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: toml_pth_input
                    text: "d:/projects/910_prProjects/bugal/bugal_p/config.toml"

        # Abstand
        BoxLayout: # 4
            orientation: 'horizontal'
            size_hint_y: None
            height: 10
            Label:
                text: ""

        BoxLayout: # 5
            orientation: 'horizontal'
            size_hint_y: None
            height: 50

            GridLayout: # leer
                cols: 2
                Label:
                    text: ''

            GridLayout: # Radio
                cols: 3
                Label:
                    text: 'CLASSIC'
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                Label:
                    text: 'BETA'
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                Label:
                    text: '2024'
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                CheckBox:
                    id: rb_classic
                    group: 'radio button'
                    active: True
                    on_active: root.get_input_type()
                    color: [1,0,1,1]
                CheckBox:
                    id: rb_beta
                    group: 'radio button'
                    active: False
                    on_active: root.get_input_type()
                    color: [1,0,1,1]
                CheckBox:
                    id: rb_2024
                    group: 'radio button'
                    active: False
                    on_active: root.get_input_type()
                    color: [1,0,1,1]
        # Abstand
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 10
            Label:
                text: ""

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 100
            GridLayout: # leer
                cols: 3
                Label:
                    text: "year"
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: start_year
                    text: "2024"
                Label:
                    text: ""

                Label:
                    text: "month"
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: start_month
                    text: "01"
                Label:
                    text: ""

                Label:
                    text: "day"
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: start_day
                    text: "01"

                Label:
                    text: ""

            GridLayout:
                cols: 3
                Label:
                    text: "year"
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "top"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: end_year
                    text: "2024"
                Label:
                    text: ""

                Label:
                    text: "month"
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "bottom"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: end_month
                    text: "04"
                Label:
                    text: ""

                Label:
                    text: "day"
                    halign: "center"  # Horizontale Ausrichtung: "left", "center" oder "right"
                    valign: "middle"  # Vertikale Ausrichtung: "top", "middle" oder "bottom"
                TextInput:
                    id: end_day
                    text: "30"
                Label:
                    text: ""

        # Testausgabe aktueller Stand des Programms
        Label:
            id: gui_log
            height: 100
            text: 'Not configured'
            halign: "center"
